<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VenueDetailsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/up"/>


    <TextView
        android:id="@+id/vn_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Venue Name"
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:paddingStart="15dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

    <TextView
        android:id="@+id/vn_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue Location"
        android:textSize="17sp"
        android:paddingStart="20dp"
        android:layout_weight="1.6"
        />


    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="17sp"
        android:textStyle="bold"
        android:gravity="end"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.2"
        />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star"
            android:layout_marginEnd="10dp"
            android:scaleType="fitStart"
            android:layout_weight="0.2"/>



    </LinearLayout>

    <TextView
        android:id="@+id/vn_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Overview"
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:paddingStart="15dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/vn_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details"
        android:textSize="17sp"
        android:textColor="#757373"
        android:paddingStart="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:paddingStart="15dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/vn_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email address"
        android:textSize="17sp"
        android:textColor="#757373"
        android:paddingStart="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Info"
        android:textSize="25sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:paddingStart="15dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/vn_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone number"
        android:textSize="17sp"
        android:textColor="#757373"
        android:paddingStart="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/vn_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:paddingStart="15dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Per slot"
            android:textSize="17sp"
            android:textColor="#757373"
            android:paddingStart="20dp"
            android:layout_marginTop="15dp"
            android:gravity="end"
            android:layout_marginEnd="20dp"
            />

    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint = "#2E2B2B"
        android:text="Book an appointment"
        android:textSize="18sp"
        android:padding="12dp"/>



</LinearLayout>